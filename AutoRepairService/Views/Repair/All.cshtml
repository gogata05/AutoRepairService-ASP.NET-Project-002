@model IEnumerable<RepairViewModel>

@{
    ViewBag.Title = "All Repairs";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @if (Model.Any())
    {
        @foreach (var repair in Model)
        {
            <div class="card col-4" style="width: 20rem;">
                <div class="card-body">

                    <h5 class="card-title mt-1">@repair.Brand</h5>
                    <p class="mb-0">Model: @repair.CarModel</p>
                    <p class="mb-0">Description: @repair.Description</p>
                    <p class="mb-0">Category: @repair.Category</p>
                    <p class="mb-0">OwnerName: @repair.OwnerName</p>
                    <p class="mb-0">StartDate: @repair.StartDate</p>
                </div>           
                <a asp-controller="Repair" asp-action="Details" asp-route-id="@repair.Id" class="btn btn-success mb-2">Details</a>               
            </div>
        }

    } else
    {
        <h3 class="text-center">No current repairs</h3>
    }
</div>