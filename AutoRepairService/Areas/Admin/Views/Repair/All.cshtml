@model IEnumerable<RepairViewModel>

@{
    ViewBag.Title = "All Repairs";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var job in Model)
    {
        <div class="card col-4" style="width: 20rem;">
           @* <img class="card-img-top" style="width: 18rem;"
             src="@job.ImageUrl" alt="Book Image">*@
            <div class="card-body">

                <h5 class="card-title mt-1">@job.Brand</h5>
                <p class="mb-0">Model: @job.Model</p>
                <p class="mb-0">Description: @job.Description</p>
                <p class="mb-0">Category: @job.Category</p>
                <p class="mb-0">OwnerName: @job.OwnerName</p>
                <p class="mb-0">StartDate: @job.StartDate</p>
            </div>
@*
            <form class="input-group-sm" asp-route-jobId="@job.Id" asp-controller="Offer" asp-action="Send" method="post">
                <input type="submit" value="Send Offer" class="fs-6 btn btn-success mb-3 p-2" />
            </form>*@
            <a asp-controller="Repair" asp-action="Details" asp-route-id="@job.Id" class="btn btn-success mb-2">Details</a>


            @if (this.User.Id() == job.OwnerId)
            {
            <a asp-controller="Repair" asp-action="Edit" asp-route-id="@job.Id" class="btn btn-primary mb-2">Edit</a>
            
            <a asp-controller="Repair" asp-action="Delete" asp-route-id="@job.Id" class="btn btn-danger mb-2">Delete</a>
            } else {
            <a asp-controller="Offer" asp-action="Send" asp-route-id="@job.Id" class="btn btn-success mb-2">Make offer</a>

            }
        </div>
    }
</div>


